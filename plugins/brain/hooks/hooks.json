{
  "description": "Brain knowledge base session hooks - loads brain context on session start",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/load-brain-context.sh",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
